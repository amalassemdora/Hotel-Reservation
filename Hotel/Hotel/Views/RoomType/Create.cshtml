@model Hotel.Models.Room_Type
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "RoomType", FormMethod.Post, new { @class = "form-group" }))
{
    <div class="row">
        <div class="col-lg-2">
            @Html.LabelFor(Model => Model.room_type1, "Room Type", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6">
            @Html.TextBoxFor(Model => Model.room_type1, new { @class = "form-control", Type = "text" })
        </div>
        <div class="col-lg-4">
            @Html.ValidationMessageFor(Model => Model.room_type1, null, new { @class = "text=danger" })
        </div>
    </div>
    <br />
    <br />

    <input type="submit" class="btn btn-danger" value="Save" />

}
@section Scripts{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
