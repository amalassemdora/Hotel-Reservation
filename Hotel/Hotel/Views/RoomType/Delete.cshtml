@model Hotel.Models.Room_Type
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3 class="text-danger">@ViewBag.msg</h3>
@using (Html.BeginForm("Delete", "RoomType", FormMethod.Post, new { @class = "form-group" }))
{
    <div class="row">
        <div class="col-lg-2">
            @Html.LabelFor(Model => Model.room_type1, "Room Type", new { @class = "text-danger" })
        </div>
        <div class="col-lg-6">
            @Html.TextBoxFor(Model => Model.room_type1, new { @class = "form-control", Type = "text", disabled = "disabled" })
        </div>
        <div class="col-lg-4">
        </div>
    </div>
    <br />
    <br />

    <input type="submit" class="btn btn-danger" value="Delete" />

}
