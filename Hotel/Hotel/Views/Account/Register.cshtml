@model Hotel.Models.Admin
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-group" }))
    {
        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(Model => Model.Name, "Name", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6">
                @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", Type = "text" })
            </div>
            <div class="col-lg-4">
                @Html.ValidationMessageFor(Model => Model.Name, null, new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(Model => Model.Email, "Email", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6">
                @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", Type = "text" })
            </div>
            <div class="col-lg-4">
                @Html.ValidationMessageFor(Model => Model.Email, null, new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-2">
                @Html.LabelFor(Model => Model.Password, "Password", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6">
                @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", Type = "text" })
            </div>
            <div class="col-lg-4">
                @Html.ValidationMessageFor(Model => Model.Password, null, new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <input type="submit" class="btn btn-danger" value="Save" />

    }
    @section Scripts{
        <script src="~/Scripts/jquery-3.6.0.js"></script>
        <script src="~/Scripts/jquery-1.8.0.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    }
